{
  "name": "Flash-driver Dev",
  "build": {
    "context": "..",
    "dockerfile": "../Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-python.python",
        "ms-vscode.hexeditor"
      ]
    }
  },
  "runArgs": [
    "--init",
    "-v", "${localWorkspaceFolder}:/work"
  ],
  "workspaceFolder": "/work",
  "postCreateCommand": "cmake -B build -DCMAKE_BUILD_TYPE=Debug"
}

